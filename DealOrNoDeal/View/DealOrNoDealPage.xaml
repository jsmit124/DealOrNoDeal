                                Click="briefcase_Click" />
                        <Button x:Name="case10" Content="11" Style="{StaticResource GameCaseStyle}"
                                Click="briefcase_Click" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="4" MinWidth="280">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="case0" Content="1" Style="{StaticResource GameCaseStyle}"
                                Click="briefcase_Click" />
                        <Button x:Name="case1" Content="2" Style="{StaticResource GameCaseStyle}"
                                Click="briefcase_Click" />
                        <Button x:Name="case2" Content="3" Style="{StaticResource GameCaseStyle}"
                                Click="briefcase_Click" />
                        <Button x:Name="case3" Content="4" Style="{StaticResource GameCaseStyle}"
                                Click="briefcase_Click" />
                        <Button x:Name="case4" Content="5" Style="{StaticResource GameCaseStyle}"
                                Click="briefcase_Click" />
                        <Button x:Name="case5" Content="6" Style="{StaticResource GameCaseStyle}"
                                Click="briefcase_Click" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="5" MinWidth="280" MinHeight="200">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock x:Name="roundLabel" Foreground="Yellow"
                                   TextAlignment="Center" FontSize="18" />
                        <TextBlock x:Name="casesToOpenLabel" Foreground="Yellow"
                                   TextAlignment="Center" FontSize="18" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="6" MinWidth="350" MinHeight="250" Background="White" Margin="0,0,0,52" Grid.RowSpan="2">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                        <TextBlock x:Name="summaryOutput" TextWrapping="Wrap" Height="Auto" Width="Auto" FontSize="14"
                                   Foreground="Black" FontFamily="Courier New" FontStretch="SemiCondensed" />
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="7">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="dealButton" Content="Deal" Style="{StaticResource GamePlayStyle}"
                                Click="dealButton_Click" />
                        <Button x:Name="noDealButton" Content="No deal" Style="{StaticResource GamePlayStyle}"
                                Click="noDealButton_Click" />
                    </StackPanel>
                </Grid>

            </Grid>

        </Grid>
