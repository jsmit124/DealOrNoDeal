                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                   TextAlignment="Center" FontWeight="Bold" />
                    </Border>

                </StackPanel>
            </Grid>

            <Grid Grid.Column="1" RequestedTheme="Dark">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
