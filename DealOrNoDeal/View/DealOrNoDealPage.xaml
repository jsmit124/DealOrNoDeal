                    <Border x:Name="label10Border" Style="{StaticResource MoneyAmountsBorderStyle}">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                   TextAlignment="Center" FontWeight="Bold" />
                    </Border>
                    <Border x:Name="label11Border" Style="{StaticResource MoneyAmountsBorderStyle}">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                   TextAlignment="Center" FontWeight="Bold" />
                    </Border>
                    <Border x:Name="label12Border" Style="{StaticResource MoneyAmountsBorderStyle}">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                   TextAlignment="Center" FontWeight="Bold" />
                    </Border>

                </StackPanel>
            </Grid>
            <Grid Grid.Column="2">
                <StackPanel Orientation="Vertical">

                    <Border x:Name="label13Border" Style="{StaticResource MoneyAmountsBorderStyle}">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                   TextAlignment="Center" FontWeight="Bold" />
                    </Border>
                    <Border x:Name="label14Border" Style="{StaticResource MoneyAmountsBorderStyle}">
