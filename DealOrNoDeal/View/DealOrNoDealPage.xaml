                    </StackPanel>
                </Grid>

                <Grid Grid.Row="3" MinWidth="280">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="case6" Content="7" Style="{StaticResource GameCaseStyle}"
                                Click="briefcase_Click" />
                        <Button x:Name="case7" Content="8" Style="{StaticResource GameCaseStyle}"
