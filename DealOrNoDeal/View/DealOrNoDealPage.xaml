                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" MinWidth="280">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="case21" Content="22" Style="{StaticResource GameCaseStyle}"
                                Click="briefcase_Click" />
                        <Button x:Name="case22" Content="23" Style="{StaticResource GameCaseStyle}"
                                Click="briefcase_Click" />
